generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  TUTOR
  ADMIN
}

enum Booked_Status {
  pending
  confirmed
  completed
  cancelled
}

enum Week {
  sat
  sun
  mon
  tue
  wed
  thu
  fri
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  role     Role    @default(STUDENT)
  isBanned Boolean @default(false)

  tutorProfile TutorProfile?
  bookings     Booking[]

  @@index([name])
}

model TutorProfile {
  id             Int             @id @default(autoincrement())
  bio            String
  hourlyRate     Decimal
  averageRate    Decimal         @default(0.00)
  experience     Int
  studentId      Int             @unique
  Student        User            @relation(fields: [studentId], references: [id])
  bookings       Booking[]
  availabilities Availability[]
  tutorSubjects  TutorSubjects[]

  @@index([hourlyRate])
  @@index([averageRate])
}

model Booking {
  id         Int           @id @default(autoincrement())
  studentId  Int
  tutorId    Int
  totalPrice Decimal
  startTime  DateTime
  endTime    DateTime
  status     Booked_Status @default(pending)
  Student    User          @relation(fields: [studentId], references: [id])
  Tutor      TutorProfile  @relation(fields: [tutorId], references: [id])
  reviews    Reviews[]

  @@index([totalPrice])
}

model Availability {
  id        Int          @id @default(autoincrement())
  tutorId   Int
  dayOfWeek Week
  startTime DateTime
  endTime   DateTime
  Tutor     TutorProfile @relation(fields: [tutorId], references: [id])

  @@index([dayOfWeek, startTime, endTime])
}

model Category {
  id            Int             @id @default(autoincrement())
  categoryName  String
  tutorSubjects TutorSubjects[]
}

model TutorSubjects {
  tutorId    Int
  categoryId Int
  Tutor      TutorProfile @relation(fields: [tutorId], references: [id])
  category   Category     @relation(fields: [categoryId], references: [id])

  @@id([tutorId, categoryId])
}

model Reviews {
  id        Int     @id @default(autoincrement())
  comment   String
  bookingId Int
  rating    Decimal @default(0.00)
  booking   Booking @relation(fields: [bookingId], references: [id])

  @@index([rating])
}
