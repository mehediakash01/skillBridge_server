generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  TUTOR
  ADMIN
}

enum Booked_Status {
  pending
  confirmed
  completed
  cancelled
}

enum Week {
  sat
  sun
  mon
  tue
  wed
  thu
  fri
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String?
  role     Role    @default(STUDENT)
  isBanned Boolean @default(false)

  tutorProfile TutorProfile?
  bookings     Booking[]

  emailVerified Boolean   @default(false)
  image         String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  sessions      Session[]
  accounts      Account[]

  @@index([name])
}

model TutorProfile {
  id             String          @id @default(uuid())
  bio            String
  hourlyRate     Decimal
  averageRate    Decimal         @default(0.00)
  experience     Int
  studentId      String          @unique
  Student        User            @relation(fields: [studentId], references: [id])
  bookings       Booking[]
  availabilities Availability[]
  tutorSubjects  TutorSubjects[]

  @@index([hourlyRate])
  @@index([averageRate])
}

model Booking {
  id         String        @id @default(uuid())
  studentId  String
  tutorId    String
  totalPrice Decimal
  startTime  DateTime
  endTime    DateTime
  status     Booked_Status @default(pending)
  Student    User          @relation(fields: [studentId], references: [id])
  Tutor      TutorProfile  @relation(fields: [tutorId], references: [id])
  reviews    Reviews[]

  @@index([totalPrice])
}

model Availability {
  id        String       @id @default(uuid())
  tutorId   String
  dayOfWeek Week
  startTime DateTime
  endTime   DateTime
  Tutor     TutorProfile @relation(fields: [tutorId], references: [id])

  @@index([dayOfWeek, startTime, endTime])
}

model Category {
  id            Int             @id @default(autoincrement())
  categoryName  String
  tutorSubjects TutorSubjects[]
}

model TutorSubjects {
  tutorId    String
  categoryId Int
  Tutor      TutorProfile @relation(fields: [tutorId], references: [id], onDelete: Cascade)
  category   Category     @relation(fields: [categoryId], references: [id], onDelete: Cascade)

  @@id([tutorId, categoryId])
}

model Reviews {
  id        String  @id @default(uuid())
  comment   String
  bookingId String
  rating    Decimal @default(0.00)
  booking   Booking @relation(fields: [bookingId], references: [id])

  @@index([rating])
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
}
